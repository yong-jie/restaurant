<!DOCTYPE html>
<html>
 <head>
		<!-- Page Title -->
    <title>Outlets</title>
    <link rel='stylesheet' href='/stylesheets/style.css' />

		<!-- CSS for Styling -->
		<link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.2.1/css/bootstrap.min.css" integrity="sha384-GJzZqFGwb1QTTN6wy59ffF1BuGJpLSa9DkKMp0DgiMDm4iYMj70gZWKYbI706tWS" crossorigin="anonymous">

		<!-- JavaScript for Interactivity -->
		<script src="https://code.jquery.com/jquery-3.3.1.slim.min.js" integrity="sha384-q8i/X+965DzO0rT7abK41JStQIAqVgRVzpbzo5smXKp4YfRvH+8abtTE1Pi6jizo" crossorigin="anonymous"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.6/umd/popper.min.js" integrity="sha384-wHAiFfRlMFy6i5SRaxvfOCifBUQy1xHdJ/yoi7FRNXMRBu5WHdZYu1hA6ZOblgut" crossorigin="anonymous"></script>
<script src="https://stackpath.bootstrapcdn.com/bootstrap/4.2.1/js/bootstrap.min.js" integrity="sha384-B0UglyR+jN6CkvvICOB2joaf5I4l3gm9GU6Hc1og6Ls7i6U/mkkaduKaBhlAXv9k" crossorigin="anonymous"></script>
		<% if (type === "Owners") { %>
			<%- include owner_sidebar.ejs %>
		<% } %>
		<% if (type === "Diners") { %>
			<%- include diner_sidebar.ejs %>
		<% } %>
		<%- include navbar.ejs %>
		<form class="form-inline my-2 my-lg-0" action="/restaurants/search">
			<input class="form-control mr-sm-2" placeholder="Search restaurant..." type="text" aria-label="Search" name ="rname">

			<div class="form-group">
			    <input class="form-check-input" type="radio" name="order" value="nameAsc" checked>
  		 	    <label class="form-check-label" for="order"> Restaurant Name Ascending</label>
			</div>

			<div class="form-group">
			    <input class="form-check-input" type="radio" name="order" value="nameDesc">
  		 	    <label class="form-check-label" for="order"> Restaurant Name Descending</label>
			</div>

			<div class="form-group">
			    <input class="form-check-input" type="radio" name="order" value="scoreAsc">
  		 	    <label class="form-check-label" for="order"> Score Ascending</label>
			</div>

			<div class="form-group">
			    <input class="form-check-input" type="radio" name="order" value="scoreDesc">
  		 	    <label class="form-check-label" for="order"> Score Descending</label>
			</div>

			<button class="btn btn-outline-success my-2 my-sm-0" type="submit">Search</button>
		</form>

		<blockquote class="blockquote text-center">
			<p class="mb-0">In total, there are <%= total[0].count%> outlets participating.</p>
		</blockquote>
		
    <h1><%= title%></h1>
		<table class="table">
			<thead>
				<tr>
					<th scope="col">Restaurants</th>
					<th scope="col">Cuisines</th>				
					<th scope="col">Areas</th>
					<th scope="col">Addresses</th>
					<th scope="col">Average Scores</th>
					<th scope="col">Average Prices</th>
					<th scope="col">Opening Time</th>
					<th scope="col">Closing Time</th>
				</tr>
			</thead>
			<tbody>
				<% for(var i=0; i<data.length; i++) { %>
				<tr>
					<td><%= data[i].rname%></td>
					<td><%= data[i].cname%></td>
					<td><%= data[i].aname%></td>
					<td><%= data[i].address%></td>
					<td><%= data[i].score%></td>
					<td>$<%= data[i].price%></td>
					<td><%= data[i].start%></td>
					<td><%= data[i].end%></td>
				</tr>
				<% } %>
			</tbody>
		</table>
  </body>
</html>
