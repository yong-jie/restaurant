  </head>
  <body>
		<%- include diner_sidebar.ejs %>  
		<%- include navbar.ejs %>  
    <h1>Rating a <%= title%></h1>
		<form id="html_form" action="rates" role="form" method="post">
			<div class="form-group">
				<label for="username">Username</label>
        <input type="VARCHAR(40)" class="form-control" id="username" name="username" placeholder="Enter your username">
			</div>
			<div class="form-group">
				<label for="rname">Outlet Name</label>
				<input type="VARCHAR(40)" class="form-control" id="rname" name="rname" placeholder="Enter the outlet name">
			</div>
			<div class="form-group">
				<label for="aname">Area</label>
				<input type="VARCHAR(40)" class="form-control" id="aname" name="aname" placeholder="Enter the outlet area">
			</div>
			<div class="form-group">
				<label for="address">Address</label>
				<input type="VARCHAR(40)" class="form-control" id="address" name="address" placeholder="Enter the outlet address">
			</div>
			<div class="form-group">
				<label for="comment">Comment</label>
                <textarea type="VARCHAR(400)" class="form-control" id="comment" name="comment" placeholder="Any comments/feedbacks?" rows="4"></textarea>
			</div>
            <div class="form-group">
				<label for="score">Score</label>
                <select name="score">
										<option value="0">0</option>
                    <option value="1">1</option>
                    <option value="2">2</option>
                    <option value="3">3</option>
                    <option value="4">4</option>
                    <option value="5">5</option>
                    <option value="6">6</option>
                    <option value="7">7</option>
                    <option value="8">8</option>
                    <option value="9">9</option>
                    <option value="10">10</option>
                </select>
            </div>
			<button type="submit" class="btn btn-primary">Submit</button>
		</form>
		<script>
			(function() {
				window.addEventListener('load', function() {
					var forms = [document.getElementById('html_form')];
					var validation = Array.prototype.filter.call(forms, function(form) {
						form.addEventListener('submit', check, false);
					});
				}, false);
			})();
		</script>
  </body>
</html>
