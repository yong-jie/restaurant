    <h1>Reserve an <%= title%></h1>
		<form id="html_form" action="insert" role="form" method="post">
			<div class="form-group">
				<label for="rname">Restaurant Name</label>
				<input type="VARCHAR(40)" class="form-control" id="rname" name="rname" placeholder="Enter the restaurant name">
			</div>
			<div class="form-group">
				<label for="aname">Area</label>
				<input type="VARCHAR(40)" class="form-control" id="aname" name="aname" placeholder="Enter the area">
			</div>
			<div class="form-group">
				<label for="address">Address</label>
				<input type="VARCHAR(40)" class="form-control" id="address" name="address" placeholder="Enter the address">
			</div>
			<div class="form-group">
				<label for="numPax">Number of People</label>
				<input type="numeric" class="form-control" id="numPax" name="numPax" placeholder="Enter the number of people">
			</div>
			<div class="form-group">
				<label for="confirmed">Confirmed</label>
        <select name="confirmed">
          <option value="true">True</option>
          <option value="false">False</option>
        </select>
      </div>
			<div class="form-group">
				<label for="dateTime">Start Time</label>
				<input type="integer" class="form-control" id="dateTime" name="dateTime" placeholder="Enter the Date and Time in this format: YYYY-MM-DD HR-MIN-SEC">
			</div>
			<button type="submit" class="btn btn-primary">Submit</button>
		</form>
		
		<script>
			(function() {
